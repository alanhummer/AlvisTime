{
  "manifest_version": 2, 
  "name": "Alvis Time - Jira Time Log",
  "short_name": "Alvis Time",
  "description": "Log your weekly time to Jira in seconds!",
  "version": "1.0",
  "background": {"scripts": ["jira-api.js", "background.js"]},
  "browser_action": {"default_icon": "images/icon.png","default_popup": "popup.html"},
  "permissions": [
    "https://*.atlassian.net/",
    "http://*.landsend.com/",
    "https://landsend.service-now.com/",
    "activeTab",
    "storage"
  ],
  "icons": { 
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}
